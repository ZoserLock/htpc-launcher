<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AppLauncher.App.Styles"
                    xmlns:my="clr-namespace:AppLauncher.Core">

    <Storyboard x:Key="MouseDownTimeLine" >
        <!--<DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Pressed" Storyboard.TargetProperty="Button.Opacity" >
            <SplineDoubleKeyFrame KeyTime="00:00:00.25" Value="1" />
        </DoubleAnimationUsingKeyFrames> -->
    </Storyboard>

    <Style x:Key="AppButtonStyle" TargetType="my:AppButton">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="my:AppButton">
                    <ControlTemplate.Resources>
                        <Style TargetType="Grid">
                            <Setter Property="MaxWidth" Value="200" />
                            <Setter Property="Height" Value="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" />
                        </Style>
                    </ControlTemplate.Resources>
                    <!-- Control Template -->

                    <Grid Background="LightBlue" Margin="5">
                        <Grid Name="InnerBorder" Background="LightCoral" Margin="20">
                            <Rectangle Width="75" Height="75">
                            </Rectangle>
                        </Grid>
                    </Grid>
  
                    <!-- Control Triggers -->
                    <ControlTemplate.Triggers>

                        <!-- Mouse Triggers -->
                        <EventTrigger RoutedEvent="MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation Duration="0:0:0.300" Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="Margin" To="5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        
                        <EventTrigger RoutedEvent="MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation Duration="0:0:0.300" Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="Margin" To="20" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        
                        <!-- Keyboard Triggers -->
                        <EventTrigger RoutedEvent="GotKeyboardFocus">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation Duration="0:0:0.300" Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="Margin" To="5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="LostKeyboardFocus">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation Duration="0:0:0.300" Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="Margin" To="20" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
         </Setter>
    </Style>

    <Style TargetType="my:AppButton" BasedOn="{StaticResource AppButtonStyle}" />
    
</ResourceDictionary>